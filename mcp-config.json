{
  "mcpServers": {
    "html2image-server": {
      "command": "node",
      "args": ["./mcp-server.js"],
      "env": {
        "OUTPUT_DIR": "./generated-images",
        "TIMEOUT": "30000",
        "MAX_IMAGE_SIZE": "10485760",
        "HEADLESS": "true"
      }
    },
    "html2image-server-http": {
      "command": "node",
      "args": ["./mcp-server.js", "--http", "--port", "3000"],
      "env": {
        "OUTPUT_DIR": "./generated-images",
        "TIMEOUT": "30000",
        "MAX_IMAGE_SIZE": "10485760",
        "HEADLESS": "true"
      }
    }
  }
}